<%- include ("../partials/header.ejs") %>
<%- include ("../partials/homenavbar.ejs") %>
<body>
    <div class="container">
        <h2 class="mt-5">Edição de um plano</h2>
        <hr>
        <form action="/plans/create" method="POST">
            <div class="card">
                <div class="card-header">
                    <h4>Editar plano</h4>
                </div>
                <div class="card-body">
                    <% if(title_msg  && title_msg.length > 0){ %>
                        <p class="alert alert-danger" style="color: red;"><%= title_msg %></p> 
                   <% } %>
                    <input value="<%= edit.title%>" type="text" name="title" id="title" class="form-control" placeholder="Título do plano"><br>                   
                    <input value="<%= edit.list %>" type="number" name="list" id="list" placeholder="N* de listas" class="form-control"><br>
                    <input value="<%= edit.client %>" type="number" name="client" id="client" placeholder="N* de clientes" class="form-control"><br>
                    <% if(value_msg != undefined && value_msg.length > 0){ %>
                        <p class="alert alert-danger" style="color: red;"><%=  value_msg  %>  </p>                     
                    <% } %>
                    <input value="<%= edit.value %>" type="number" name="value" id="value" placeholder="Custo" class="form-control"><br>
                    <hr>
                    Permite importação de lista: 
                    <% if(edit.import){ %>
                        <input type="checkbox" name="imports" id="imports" checked>
                    <% } else { %>
                        <input type="checkbox" name="imports" id="imports">
                    <% } %>
                </div>
                <div class="card-footer">
                    <button class="btn btn-success btn-block">Cadastrar</button>
                </div>
            </div>
        </form>
    </div>
</body>

<%- include ("../partials/footer.ejs") %>